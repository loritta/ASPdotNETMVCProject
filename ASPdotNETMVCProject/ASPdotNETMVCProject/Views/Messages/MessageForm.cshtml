@model ASPdotNETMVCProject.ViewModels.MessageCustomerGaragesViewModel

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Send you message to a garage</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Customer.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <label> @Model.Customer.FirstName</label>
            <label> @Model.Customer.LastName</label>
        </div>
    </div>
    
           
            <input type="hidden" name="CustomerID" value="@Model.Customer.ID" id="CustomerID" />
        

    <div class="form-group">
        @Html.LabelFor(model => model.Message.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Message.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Message.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Message.Contents, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Message.Contents, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Message.Contents, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Message.GarageID)
        @Html.DropDownListFor(m => m.Message.GarageID, new SelectList(Model.Garages, "ID", "Name"), "Please select a garage", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Message.GarageID)
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
